pipeline {
  agent {
    docker {
      any 'hashicorp/terraform'
      args '--entrypoint='
    }
  }
  stages {
    stage('Terraform Plan') { 
      steps {
        sh 'terraform plan -no-color -out=create.tfplan' 
      }
    }
    stage ('Terraform Apply') {
      steps {
          sh "terraform --version" 
        }
    }
  }
}
